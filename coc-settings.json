{
  //Language Server Java
  "java.home": "/opt/jdk-14.0.1/",
  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": [
      "expandable?",
      "expand",
      "open"
    ],
    "v": "open:vsplit"
  },
  //autoformat
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "json",
    "python",
    "vim",
    "c",
    "java"
  ],
  "languageserver": {
    "latex": {
      "command": "/usr/bin/texlab",
      // not start server at home directory, since it won't work.
      "ignoredRootPaths": [
        "~"
      ],
      "filetypes": [
        "tex",
        "bib",
        "plaintex",
        "context"
      ],
      "latex.build.onSave": true
    }
  },
  "clangd.path": "/home/ken_nc/.config/coc/extensions/coc-clangd-data/install/10.0.0/clangd_10.0.0/bin/clangd"
}
